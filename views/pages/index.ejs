</head>

<body>

  <div class="container-fluid p-4">
    <div class="row gap-4">

      <div class="col-lg dropDown">
        <div>
          <h1 class="logo">HODLINFO</h1>

        </div>
      </div>

      <div class="col-lg dropDown">
        <div class="select">
          <select class="m-2" name="" id="">
            <option value="inr">INR</option>
          </select>

          <select class="m-2" name="" id="">
            <option value="inr">BTC</option>
            <option value="">ETH</option>
            <option value="">DASH</option>
          </select>

          <button class="m-2 btn-buy" type="button">Buy BTC</button>
        </div>

      </div>
      <div class="col-lg dropDown">
        <div class="">

          <button type="button" class="btn-tel"><i class="fa-brands fa-telegram fa-xl" style="color: #ffffff;"> </i> Connect Telegram</button>
        </div>
      </div>
    </div>
  </div>

 


  <div class="grid-container">


    <div class="col-lg">
      <div>

        <h3 class="">0.77 %</h3>
        <p class="">
          5 Mins
        </p>
      </div>
    </div>

    <div class="col-lg">
      <div>
        <h3 class="">0.61 %
        </h3>
        <p class="">
          1 Hour
        </p>

      </div>
    </div>

    <div class="col-lg">
      <div>
        <span class="">Best Price to Trade</span>
        <h2 class="text-white">â‚¹ 25,98,723</h2>
        <span class=" desc">Average BTC/INR net price including commission</span>
      </div>
    </div>

    <div class="col-lg ">

      <div class="">
        <h3 class="">3 %
        </h3>
        <p class="">
          1 Day
        </p>
      </div>

    </div>
    <div class="col-lg ">
      <div class="">
        <h3 class="">9.19 %
        </h3>
        <p class="">
          7 Days
        </p>
      </div>
    </div>

  </div>




  <div class="tables">
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Last Traded Price</th>
          <th>Buy / Sell Price</th>
          <th>Base Unit</th>
        </tr>
      </thead>
      <tbody>
        <% let count = 1 %> <% result.forEach(data => { %>

        <tr>
          <td><%= count++ %></td>
          <td><%= data.name %></td>
          <td><%= data.last %></td>
          <td><%= data.buy %> / <%= data.sell %></td>
          <td><%= data.base_unit %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>


  <hr class="text-white">
<p style="margin-top: 5rem;"></p>


